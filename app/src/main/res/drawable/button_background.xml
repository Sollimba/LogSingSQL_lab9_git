<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Состояние нажатия -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#A569BD"/> <!-- Более тёмный оттенок при нажатии -->
            <corners android:radius="30dp"/> <!-- Закруглённые углы -->
        </shape>
    </item>

    <!-- Состояние по умолчанию -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B38CD9"/> <!-- Основной цвет кнопки -->
            <corners android:radius="30dp"/> <!-- Закруглённые углы -->
        </shape>
    </item>

</selector>